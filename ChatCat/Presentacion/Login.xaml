<Window x:Class="ChatCat.Presentacion.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChatCat.Presentacion"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Loaded="Window_Loaded"
        Title="ChatCat" MinHeight="450" MinWidth="800" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Assets/Images/background.png" Stretch="UniformToFill"></ImageBrush>
        </Grid.Background>

        <Border Background="#FF171717" BorderBrush="#FF252525" CornerRadius="10,10,10,10" Margin="100,35,100,35" Padding="10,10,10,10" BorderThickness="2">
            <Grid VerticalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100*"/>
                    <ColumnDefinition Width="50"/>
                    <ColumnDefinition Width="100*"/>
                </Grid.ColumnDefinitions>
                
                <Grid.RowDefinitions>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="70"/>
                    <RowDefinition Height="70"/>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="50"/>
                </Grid.RowDefinitions>

                <Label Grid.Row="0" Grid.Column="0" Foreground="White" Content="Login" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontSize="24"/>

                <Grid Grid.Row="1" Grid.Column="0">
                    <Label x:Name="lblUsername" Content="Nombre de usuario" VerticalContentAlignment="Top" HorizontalContentAlignment="Left" Margin="5,5,0,0" Foreground="White"/>
                    <TextBox x:Name="txtUsername" TextWrapping="Wrap" VerticalContentAlignment="Center" Margin="10,30,10,10" Background="#FF252525" BorderBrush="#FF252525" Foreground="White"/>
                </Grid>

                <Grid Grid.Row="2" Grid.Column="0">
                    <Label x:Name="lblPassword" Content="Contraseña" VerticalContentAlignment="Top" HorizontalContentAlignment="Left" Margin="5,5,0,0" Foreground="White" BorderThickness="2"/>
                    <PasswordBox x:Name="txtPassword" VerticalContentAlignment="Center" Margin="10,30,10,10" Background="#FF252525" BorderBrush="#FF252525" Foreground="White" BorderThickness="2"/>
                </Grid>

                <Button Grid.Row="3" Grid.Column="0" x:Name="loginButton" Content="Ingresar" Click="ButtonLogin" Margin="35,10,35,10" IsEnabled="False" Background="#FF252525" BorderBrush="#FF252525" Foreground="White" AutomationProperties.HelpText="Test" BorderThickness="2">
                    <Button.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="7"/>
                        </Style>
                    </Button.Resources>
                </Button>

                <Button Grid.Row="4" Grid.Column="0" x:Name="registerButton" Content="Registrarse" Click="ButtonRegister" Margin="35,10,35,10" IsEnabled="False" Background="#FF252525" BorderBrush="#FF252525" Foreground="White" BorderThickness="2">
                    <Button.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="7"/>
                        </Style>
                    </Button.Resources>
                </Button>

                <Label Grid.Row="0" Grid.Column="2" Foreground="White" Content="Server" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontSize="24"/>

                <Grid Grid.Row="1" Grid.Column="2">
                    <Label x:Name="lblServer" Content="Server" VerticalContentAlignment="Top" HorizontalContentAlignment="Left" Margin="5,5,0,0" Foreground="White"/>
                    <TextBox x:Name="txtServer" Text="http://localhost:11000" TextWrapping="Wrap" VerticalContentAlignment="Center" Margin="10,30,10,10" Background="#FF252525" BorderBrush="#FF252525" Foreground="White" BorderThickness="2"/>
                </Grid>

                <Button Grid.Row="3" Grid.Column="2" x:Name="connectServerButton" Content="Conectarse" Click="connectServerButton_Click" Margin="35,10,35,10" Background="#FF252525" BorderBrush="#FF252525" Foreground="White" BorderThickness="2">
                    <Button.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="7"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </Grid>
        </Border>
    </Grid>
</Window>