<Window x:Class="ChatCat.Chat"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChatCat"
        WindowStartupLocation="CenterScreen"
        mc:Ignorable="d"
        Loaded="Chat_Loaded"
        Title="Chat" MinHeight="450" MinWidth="800" Height="550" Width="950">
    <Grid Background="#FF171717">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="1" Grid.Column="0">
            <Button Margin="10,9,10,10" Content="Desconectar" Click="ButtonDesconectar" Style="{StaticResource DarkButtonStyle}"/>
        </Grid>

        <Grid Grid.Row="1" Grid.Column="1">
            <TextBox x:Name="MessageInput" KeyDown="MessageInput_KeyDown" Margin="10,10,55,10" TextWrapping="Wrap" VerticalContentAlignment="Center" Background="#FF171717" Foreground="White" BorderBrush="#FF252525" BorderThickness="2"/>
            <Button Click="SendMessage_Click" x:Name="SendMessage" Content=">" HorizontalAlignment="Right" VerticalAlignment="Center" Padding="10,5,10,5" Margin="10,10,10,10" ScrollViewer.CanContentScroll="True" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Style="{StaticResource DarkButtonStyle}"/>
        </Grid>

        <ListBox x:Name="listMessages" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="10,10,10,10" Grid.Column="1" HorizontalContentAlignment="Stretch" ScrollViewer.HorizontalScrollBarVisibility="Disabled" Background="#FF171717" BorderBrush="#FF252525" BorderThickness="2">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal" Margin="5">
                        <!-- Imagen de perfil -->
                        <Image Source="{Binding pfp}" 
                       Width="32" Height="32" 
                       Margin="0,0,8,0"
                       Stretch="UniformToFill"
                       ClipToBounds="True"/>

                        <!-- Contenedor de texto -->
                        <StackPanel>
                            <TextBlock Text="{Binding from}" 
                               FontWeight="Bold"
                               Foreground="#FF79DC4D"/>
                            <TextBlock Text="{Binding text}" 
                               TextWrapping="Wrap"
                                        MaxWidth="500"
                               Margin="0,2,0,0"
                                       Foreground="White"/>
                        </StackPanel>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <ListBox x:Name="listUsers" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="10,10,10,10" Background="#FF171717" BorderBrush="#FF252525" BorderThickness="2">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal" Margin="5">
                        <Image Source="/Assets/Images/ChatCatIcon.png" 
                       Width="24" Height="24" 
                       Margin="0,0,8,0"
                       Stretch="UniformToFill"
                       ClipToBounds="True"/>
                        <TextBlock Text="{Binding username}" 
                           VerticalAlignment="Center"
                           FontWeight="Bold"
                                   Foreground="#FF79DC4D"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>


    </Grid>
</Window>
